{
  "mcpServers": {
    "gdrive": {
      "command": "node",
      "args": [
        "/absolute/path/to/mcp_gdrive/dist/index.js"
      ],
      "env": {
        "GDRIVE_USER": "your-user-id"
      }
    },
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "your-github-token-here"
      }
    }
  }
}
